<section class="profile-background-c" style="background-image: linear-gradient(to bottom, rgba(0,0,0,.5), rgba(0,0,0,.8)), url(<%=asset_path('placeholder.jpg')%>);">
  <div id="content" class="nav-spacing">
      <h1 style="text-align: center;" class="profile-h1 col-md-12"><%= @campaign.name %></h1>
  </div>
  <div class="col-md-12" style="padding-left: 0;">
    <% if @campaign.description != "" %>
      <%= text_area_tag :discription, @campaign.description, rows: 10, maxlength: 10000, class: 'profile-box profile-textarea style-white border-white', placeholder: @campaign.description, style: "width: 80%; height: calc(80% - 46px); resize: none; margin: 60px 10%;" %>
    <% end %>
  </div>
</section>
